@using Microsoft.AspNetCore.Identity
@using RpgRooms.Infrastructure.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery AntiForgery
@{
    // Use the current HTTP context exposed via the Razor Page's Context property
    // instead of referring to the HttpContext type directly.
    var tokens = AntiForgery.GetAndStoreTokens(Context);
}

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity?.Name</a>
    </li>
    <li class="nav-item">
            <form class="form-inline"
                  asp-area="Identity"
                  asp-page="/Account/Logout"
                  asp-route-returnUrl="@(Url.IsLocalUrl(Url.Page("/Index")) ? Url.Page("/Index") : Url.Content("~/"))"
                  method="post">
            <input type="hidden" name="__RequestVerificationToken" value="@tokens.RequestToken" />
            <button type="submit" class="nav-link btn btn-link">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>

